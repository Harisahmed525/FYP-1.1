# Server
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/myapp

# Authentication
JWT_SECRET=replace_this_with_strong_secret

# OpenAI (optional but required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Storage (optional but required for video upload)
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nKEY_CONTENT\n-----END PRIVATE KEY-----"
FIREBASE_STORAGE_BUCKET=your_bucket_name_here

